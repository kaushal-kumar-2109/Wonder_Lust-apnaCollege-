<% layout('/layouts/boilerplate')%>
<body>
    <h3>all listings</h3>
    <!-- <form method="get" action="/listings/new">
        <button>Create new Listing</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-mg-3 row-cols-sm-1">
        
        <% for (let i=0;i<data.length;i++){%>
            <a href="/listings/<%=data[i]._id%>" class="listing-link">
                <div class="card">
                    <img src="<%=data[i].image%>" class="card-img-top" alt="listing image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text">
                        <b><%=data[i].title%></b> <br>
                        &#8377;<%=data[i].price.toLocaleString('en-IN')%>
                      </p>
                    </div>
                </div>
            </a>
        <%}%>

    </div>
    
    
</body>
