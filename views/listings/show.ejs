<% layout('/layouts/boilerplate')%>

<body>
    <div class="row">
        <div class="col-8 offset-3 mt-3">

            <h3><b><%=data.title%></b></h3>
        </div>


            <div class="card col-6 offset-3 show-card">
                <img src="<%=data.image%>" class="card-img-top show-img" alt="listing_image">
                <div class="card-body">
                    <p class="card-text">
                        <br>
                        <%=data.description%>
                        <br>
                        &#8377; <%=data.price.toLocaleString("en-IN")%>
                        <br>
                        <%=data.location%>
                        <br>
                        <%=data.country%>
                    </p>
                </div>
            </div>
            <br>
            <div class="btns">
                <a href="/listings/<%=data._id%>/edit" class="btn btn-dark col-1 offset-3 add-btn">Edit</a> 

                
                <form method="post" action="/listings/<%=data._id%>?_method=DELETE">
                    <button class="btn btn-dark offset-5">Delete</button>
                </form>

            </div>

            <div>
                <hr>
                <h4 class="offset-3"><b>Leave A Review</b></h4>

                <form class="mb-3 offset-3 col-8">
                    <div class="mb-3 mt-3">
                        <label class="form-label" for="rating">Rating</label>
                        <input class="form-range" value="4" type="range" min="1" max="5" id="rating" name="review[rating]">
                    </div>
                    <div class="mb-3 mt-3">
                        <label class="form-label" for="comment">Comment : </label>
                        <textarea class="form-control" id="comment" name="review[comment]" rows="5"></textarea>
                    </div>
                    <button class="btn btn-outline-dark">Submit</button>
                </form>
            </div>
            
    </div>
</body>